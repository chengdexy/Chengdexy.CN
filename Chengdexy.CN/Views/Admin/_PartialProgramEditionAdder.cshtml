@model Chengdexy.CN.Models.Program

<link href="~/CSS/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/JS/bootstrap-datetimepicker.js"></script>
<script src="~/JS/bootstrap-datetimepicker.zh-CN.js"></script>
@using (Html.BeginForm("AddProgramEdition", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" id="hiddenID" name="hiddenID" value="@Model.ID">
        <label for="inputDate">Publish Date</label>
        <input type="text" class="form-control form-datetime" readonly value="@DateTime.Now.ToString("yyyy-MM-dd")" id="inputDate" name="inputDate" />
        <script type="text/javascript">
            $(".form-datetime").datetimepicker({
                format: 'yyyy-mm-dd',
                minView: 2,
                autoclose: true,
                todayBtn: true
            });
        </script>
    </div>
        <div class="form-group">
            <label for="inputEditionString">Edition</label>
            <input type="text" class="form-control" id="inputEditionString" name="inputEditionString" placeholder="Input Edition String" />
        </div>
        <div class="form-group">
            <label for="inputDownloadUrl">Download Url</label>
            <input type="text" class="form-control" id="inputDownloadUrl" name="inputDownloadUrl" placeholder="Input Download Url" />
        </div>
        <button class="btn btn-default" type="submit">发布</button>
}

