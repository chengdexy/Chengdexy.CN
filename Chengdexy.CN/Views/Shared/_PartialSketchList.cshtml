@model List<Chengdexy.CN.Models.BlogSketch>

<!--内容列表-->
<div class="row">
    @*
        1. lg屏:每行2项,col-lg-6,图片3文字9按钮2后退9
        2. md屏:每行1项,col-md-12,图片2文字10按钮2后退9
        3. sm屏:每行1项,col-sm-12,图片3文字9按钮2后退9
        4. xs屏:每行1项,col-xs-12,图片隐藏文字12按钮3后退9
    *@
    @for (int i = 0; i < Model.Count; i++)
    {
        //内容列表项开始
        var mod = Model[i];
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
            <div class="hidden-xs col-sm-3  col-md-2 col-lg-3">
                <a href="" class="thumbnail"><img src="@mod.ImageFileName" alt="" /></a>
            </div>
            <div class="col-xs-12  col-sm-9 col-md-10 col-lg-9">
                <h3>@mod.BlogCapital</h3>
                <p class="text-muted">@mod.BlogDescribe</p>
                <a href="@mod.BlogUrl" class="btn btn-default col-xs-3 col-xs-offset-9 col-sm-2 com-sm-offset-9 col-md-2 col-md-offset-9">详情...</a>
            </div>
        </div>
        //列表项结束
    }
    
</div>
